<h1 class='header'>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class='update-container'>
    <div class='update-label'><%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "update-form"  %>
  </div>
  </div>

    <div class='update-container'>
    <div class='update-label'><%= f.label :First, "First Name" %><br></div>
    <div class='update-label'><%= f.text_field :fname, autofocus: true, autocomplete: "First Name", :class => "update-form" %>
  </div>
  </div>

   <div class='update-container'>
    <div class='update-label'><%= f.label :Last, "Last Name" %><br></div>
   <div class='update-label'><%= f.text_field :lname, autofocus: true, autocomplete: "Last Name", :class => "update-form" %>
  </div>
  </div>

   <div class='update-container'>
   <div class='update-label'><%= f.label :Username %><br></div>
   <div class='update-label'><%= f.text_field :username, autofocus: true, autocomplete: "Userame", :class => "update-form" %>
  </div>
</div>

  <div class='update-container'>
    <div class='update-label'><%= f.label :password %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    </div>
    <% if @minimum_password_length %>
    
    <% end %>
   <div class='update-label'><%= f.password_field :password, autocomplete: "new-password", :class => "update-form" %>
  </div>
  </div>

  <div class='update-container'>
   <div class='update-label'><%= f.label :password_confirmation %><br></div>
   <div class='update-label'><%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "update-form" %>
  </div>
  </div>


  <div class='blog-buttons'>
    <%= f.submit "Sign up", :class =>'signup-btn'%>
  </div>
<% end %>


