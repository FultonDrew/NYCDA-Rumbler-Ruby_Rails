<h1>Title: <%= current_blog.title %> </h1>
<h2>Content: <%= current_blog.content %></h2>



<% if user_signed_in? %>
<%= form_for ([current_blog, current_blog.comments.build]) do |f| %>
	<div>Comment: <%= f.text_area :content %></div>
	<%= f.submit %>
	<% end %>

<% if current_user.id == current_blog.user_id %>
	<%= link_to "Update", edit_blog_path %>
	<%= link_to "Delete", blog_path, method: :delete, data: {confirm: "Are you sure?"} %>
	
		<% end %>
<% end %>
