<!DOCTYPE html>
<html>
  <head>
    <title>Rumbler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class='page-wrapper'>

<nav>
  <div id='head-box'>
    <div class='title'>Where next?</div>
    <div class='title-sub'>A travel blog for those who love to wander</div>
  </div>
    <% if user_signed_in? %>
    <div id='navBtn'>
      
     
      <li id='navElement'><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
      
      <li id='navElement'><%= link_to "Users", users_path %></li>
      <li id='navElement'><%= link_to "Edit User", edit_user_registration_path %></li>
       <li id='navElement'><%= link_to "New Post", new_blog_path %></li>
      <li id='navElement'><%= link_to "Home", root_path %></li>

      
    </div>
      <% else %>
    <div id='navBtn'>
      <li id='navElement'> <%= link_to "Sign In", user_session_path  %></li>
    </div>
      <% end %>
</nav>





<div id='loggedin'>
<div> <% if user_signed_in? %> 
<div id='loggedin-dot'></div>
Logged in as: <a href='/users/<%= current_user.id %>'><%= current_user.fname %> <%= current_user.lname %></a>

<% end %>
</div>
</div>


    <%= yield %>
</div>
